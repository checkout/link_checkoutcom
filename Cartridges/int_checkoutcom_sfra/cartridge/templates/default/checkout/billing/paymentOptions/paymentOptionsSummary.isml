<div class="payment-details">
    <isloop items="${pdict.order.billing.payment.selectedPaymentInstruments}" var="payment">
        <isif condition="${payment.paymentMethod === 'CHECKOUTCOM_CARD'}">
            <isinclude template="checkout/billing/paymentOptions/summary/creditCardSummary" />
        </isif>
    </isloop>
</div>
